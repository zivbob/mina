page {
  height: 100%;
}
.top {
  color: #888;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.item {
  width: 160rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.active {
  color: skyblue;
  border-bottom: 5rpx skyblue solid;
}

.content {
  margin-top: 0;
  width: 100%;
  height: 100%;
}

.action {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  background-color: #24BDDF;
  color: #f4f4f4;
  align-items: center;
}

.table {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 88rpx;
  color: #0b61a4;
}