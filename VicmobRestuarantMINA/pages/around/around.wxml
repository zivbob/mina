<view class="container">
  <view class="pages4 pageContent  {{displayStyle[3]}}">
    <!-- <map class="maps" id="map2" longitude="{{longitude}}" latitude="{{latitude}}" controls="{{controls}}" bindmarkertap="markertap" markers="{{markers}}"></map> -->
    <map id="map2" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" markers="{{markers}}" bindmarkertap="markertap" show-location style="width: 100%; height: 300px;"></map>
    <view class="section tffic-list" bindtap="opennearbyShops">
      <view class="logbx ">
        <image src="{{around.imgBussDistrict}}"></image>
      </view>
      <view class="descbx ">
        <view class="tps" style="font-size:32rpx;font-weight:bold">附近门店</view>
      </view>
      <block wx:if="{{!showNearBy}}">
        <image class="xxx" src="../../imgs/around/down.png"></image>
      </block>
      <block wx:else>
        <image class="xxx" src="../../imgs/around/up.png"></image>
      </block>
    </view>
    <view>
      <block wx:if="{{showNearBy}}">
        <block wx:for="{{nearbyShops}}" wx:key="id">
          <block wx:if="{{item.distance<= item.serveRadius}}">
            <view class="wxk-pic-word nearby" data-id="{{item.storeId}}" bindtap="goToDetailPage">
              <image class="wxk-cover" src="{{item.logo}}" />
              <view class="wxk-content">
                <view class="wxk-title">{{item.title}}</view>
                <view class="wxk-prize">月售
                  <block wx:if="{{item.totalSail==null||item.totalSail=='null'}}">
                    <text style="color:red">0</text>
                  </block>
                  <block wx:else>
                    <text style="color:red">{{item.totalSail}}</text>
                  </block>单</view>
                <view class="money-list wxk-bottom">
                  <view class="money-item_left">起送价
                    <text style="color:red">¥{{item.sendPrice}}</text>
                  </view>
                  <view style="width:2%;font-size: 25rpx;color:#BEBEBE;margin-top:-6rpx">|</view>
                  <view class="money-item">配送
                    <text style="color:red">¥{{item.deliveryPrice}}</text>
                  </view>
                </view>
                <block wx:if="{{item.hotStr.length>1}}">
                  <view class="wxk-prize">
                    <image class="wxk-pic" src="../../imgs/index/manjian.png" />
                    <text class='wxk-text-item'>满{{item.deliveryFreePrice}}元免配送费</text>
                  </view>
                  <view class="wxk-manjian">
                    <image class="wxk-pic" src="../../imgs/index/rexiao.png" />
                    <text class='wxk-text-item'>{{item.hotStr}}</text>
                  </view>
                </block>
                <block wx:else>
                  <view class="wxk-manjian">
                    <image class="wxk-pic" src="../../imgs/index/manjian.png" />
                    <text class='wxk-text-item'>满{{item.deliveryFreePrice}}元免配送费</text>
                  </view>
                </block>
              </view>
              <view class="wxk-right">
                <block wx:if="{{item.distance!=null && item.distance!='null'&&item.distance!='0'&&item.distance!=0}}">
                  <view class="wxk-tit">{{item.distance}}km</view>
                </block>
                <view class="wxk-pri">送达 {{item.deliveryTime}}分钟</view>
              </view>
            </view>
            <view class="shop" />
          </block>
        </block>
      </block>
    </view>
    <view wx:if="{{!hasSrore}}" class="loading">{{loadStore}}</view>
  </view>
</view>