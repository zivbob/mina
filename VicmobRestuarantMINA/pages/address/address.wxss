/* address.wxss */

page {
  font-size: 10pt;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
  font-family: "PingFang SC";
}

.address {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 1px;
  padding: 30rpx;
  margin: 20rpx 0;
}

.address-icon {
  width: 100rpx;
}

.address-detail {
  width: 590rpx;
}

.address-name-phone {
  margin-bottom: 20rpx;
  font-size: 11pt;
  font-weight: 900;
}

.address-name {
  margin-right: 20rpx;
}

.address-info {
  margin-bottom: 30rpx;
}

.address-edit {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-top: 1px #efeff4 solid;
  padding-top: 30rpx;
}

.add-address {
  display: flex;
  align-items: center;
  margin-top: 20px;
  padding: 18rpx;
  background-color: #fff;
  font-size: 11pt;
  font-weight: 900;
  margin-bottom: 50rpx;
}

.jump {
  position: absolute;
  right: 15rpx;
  margin-top: 3rpx;
  color: #999;
}

.address-add {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  color: #fff;
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FD6233;
  border-radius: 10rpx;
}
