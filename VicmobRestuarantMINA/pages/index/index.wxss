}

.wxk-right {
  width: 32%;
  height: auto;
  display: flex;
  flex-flow: column;
  align-items: flex-end;
  margin-right: 17rpx;
}

.wxk-tit {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 42rpx;
}

.wxk-pri {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-items: center;
